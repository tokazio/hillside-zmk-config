                ;
        };

c_ced: c_ced {
            label = "c ced";
	    tap-ms = <50>;
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings
                = <&macro_tap &kp LA(C)>
                ;
        };
	
	e_circ: e_circ {
            label = "e circ";
	    tap-ms = <50>;
